<%= simple_form_for @comment, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> comment</legend>

		<%= f.input :content %>
		<%= f.input :name %>
		<%= f.input :email %>
    <%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', comments_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
